<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Server Tree View -->
    <record id="view_server_tree" model="ir.ui.view">
        <field name="name">server.tree</field>
        <field name="model">server</field>
        <field name="arch" type="xml">
            <tree string="Server List">
                <field name="name"/>
                <field name="ip_address"/>
                <field name="operating_system"/>
                <field name="status" />
                <field name="last_checked"/>
                <field name="customer_id"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide"/>

                <field name="is_active"/>

            </tree>
        </field>
    </record>

    <!-- Server Form View -->
    <record id="view_server_form" model="ir.ui.view">
        <field name="name">server.form</field>
        <field name="model">server</field>
        <field name="arch" type="xml">
            <form string="Server Form">

                       <header>
                        <button name="check_server_status" type="object" string="Check Server Status" class="oe_highlight"
                            icon="fa-refresh"/>

                </header>
                <sheet>



                    <div class="oe_title">
                        <p>Server Name</p>
                        <h1><field name="name"/></h1>
                    </div>

                      <group>
                            <group>



                        <field name="ip_address"/>
                        <field name="username"/>



                        <field name="operating_system"/>
                        <field name="ssh_port"/>
                                <field name="password_type"/>
                                 <field name="password" password="True"/>
                            </group>
                            <group>
                        <field name="status" readonly="1"/>
                        <field name="last_checked" readonly="1"/>
                        <field name="customer_id"/>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Tags"  />
                        <field name="is_active"/>
                                  </group>

                    </group>

                    <notebook>
                         <page string="Commands">
                            <field name="command_ids"/>
                        </page>
                         <page string="Services">
                            <field name="service_ids"/>
                        </page>
                         <page string="Maintenance">
                            <field name="maintenance_ids"/>
                        </page>
                        <page string="Note">
                            <field name="note"/>
                        </page>
                     </notebook>


                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>


            </form>
        </field>
    </record>



        <!-- Search View for Server -->
        <record id="view_server_search" model="ir.ui.view">
            <field name="name">server.search</field>
            <field name="model">server</field>
            <field name="arch" type="xml">
                <search string="Server">

                     <field name="name" string="Server" filter_domain="['|', ('ip_address', 'ilike', self), ('name', 'ilike', self)]"/>
                </search>
            </field>
        </record>





      <record id="view_server_maintenance_tree" model="ir.ui.view">
        <field name="name">server.maintenance.tree</field>
        <field name="model">server.maintenance</field>
        <field name="arch" type="xml">
            <tree string="Server Maintenance">
                <field name="name"/>
                <field name="server_id"/>
                <field name="maintenance_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
                <field name="responsible_user_id"/>
            </tree>
        </field>


    </record>
    <record id="view_server_maintenance_form" model="ir.ui.view">
        <field name="name">server.maintenance.form</field>
        <field name="model">server.maintenance</field>
        <field name="arch" type="xml">
            <form string="Server Maintenance">
                 <header>
                                         <field name="status" widget="statusbar" />

                          </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="server_id"/>
                            <field name="maintenance_type"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="status"/>
                        </group>
                    </group>

                    <group>
                        <field name="responsible_user_id"/>
                    </group>
                     <notebook>
                         <page string="Description">
                            <field name="description"/>
                        </page>
                     </notebook>
                </sheet>
                  <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>

            </form>
        </field>
    </record>

        <!-- Server Action -->
    <record id="action_server" model="ir.actions.act_window">
        <field name="name">Servers</field>
        <field name="res_model">server</field>
        <field name="view_mode">tree,form</field>
    </record>

        <!-- Server Action -->
    <record id="action_server_maintenance" model="ir.actions.act_window">
        <field name="name">Server Maintenance</field>
        <field name="res_model">server.maintenance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Server Menu Item -->
    <menuitem id="menu_server_root" name="Server Management"/>
    <menuitem id="menu_server" name="Servers" parent="menu_server_root" action="action_server"/>

    <menuitem id="menu_server_maintenance"
                  name="Maintenance"
                  parent="menu_server_root"
                  action="action_server_maintenance"
                  sequence="10"/></odoo>
